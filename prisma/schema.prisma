generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

model Category {
  id       String    @id @default(uuid())
  isMain   Boolean
  slug     String    @unique
  label    String    @unique
  title    String    @unique
  subTitle String?
  Product  Product[]
}

model Product {
  id         String @id @default(uuid())
  title      String
  descrption String
  inStock    Int
  price      Float  @default(0)
  slug       String @unique

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  images Image[]
}

model Image {
  id       String    @id @default(uuid())
  url      String
  
  products Product[]
}
