generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Role {
  admin
  user
}

model Category {
  id       String    @id @default(uuid())
  isMain   Boolean
  slug     String    @unique
  label    String    @unique
  title    String    @unique
  subTitle String?
  Product  Product[]
}

model Product {
  id          String @id @default(uuid())
  title       String
  description String
  inStock     Int
  price       Float  @default(0)
  slug        String @unique
  sizes       Size[]

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  images Image[]
}

model Image {
  id  String @id @default(uuid())
  url String

  products Product[]
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  verifiedEmail Boolean
  password      String
  role          Role     @default(user)
  image         String?
  Address       Address?
}

model Country {
  id      String    @id @default(uuid())
  code    String    @unique
  name    String
  Address Address[]
}

model Address {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String
  address    String
  address2   String?
  postalCode String
  city       String
  phone      String

  country   Country @relation(fields: [countryId], references: [id])
  countryId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
