generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Role {
  admin
  user
}

model Category {
  id       String    @id @default(uuid())
  isMain   Boolean
  slug     String    @unique
  label    String    @unique
  title    String    @unique
  subTitle String?
  Product  Product[]
}

model Product {
  id          String @id @default(uuid())
  title       String
  description String
  inStock     Int
  price       Float  @default(0)
  slug        String @unique
  sizes       Size[]

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  images        Image[]
  orderProducts OrderProduct[]
}

model Image {
  id  String @id @default(uuid())
  url String

  products Product[]
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  verifiedEmail Boolean
  password      String
  role          Role     @default(user)
  image         String?
  Address       Address?
  orders        Order[]
}

model Country {
  id      String    @id @default(uuid())
  code    String    @unique
  name    String
  address Address[]
}

model Address {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String
  address    String
  address2   String?
  postalCode String
  city       String
  phone      String

  country   Country @relation(fields: [countryId], references: [id])
  countryId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Order {
  id     String    @id @default(uuid())
  tax    Float
  paidAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  orderProducts OrderProduct[]

  deliveryAddress Json
}

model OrderProduct {
  id       String @id @default(uuid())
  quantity Int
  price    Float
  size     Size

  product   Product @relation(fields: [productId], references: [id])
  productId String

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String
}
